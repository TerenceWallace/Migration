<GUITemplates>
  <Template Name="template:BuildingListBoxItem">
    <RadioButton Width="95" Height="60">
      <Image Id="NormalState" Height="50" KeepAspectRatio="true" HorizontalAlignment="Center" VerticalAlignment="Center" Source="{0}"/>
      <Control Id="OverState">
        <Image Source="Buttons/BuildingOverDown.png"/>
        <Image Height="50" KeepAspectRatio="true" HorizontalAlignment="Center" VerticalAlignment="Center" Source="{0}"/>
      </Control>
      <Control Id="DownState">
        <Image Source="Buttons/BuildingOverDown.png"/>
        <Image Height="50" KeepAspectRatio="true" HorizontalAlignment="Center" VerticalAlignment="Center" Source="{0}"/>
      </Control>
    </RadioButton>
  </Template>

  <Template Name="template:ResourceStackItem">
    <Button Width="50" Height="40">
      <Control Id="NormalState">
        <Image Width="30" Height="30" Source="Race/Resources/{0}.png"/>
        <Label Left="32" Width="20" Text="{1}" FontColor="White" FontStyle="Bold"/>
        <Label Left="32" Width="20" Top="15" Text="{2}" FontColor="Green" FontIndent="-5" FontStyle="Bold"/>
      </Control>
    </Button>
  </Template>

  <Template Name="template:MarketResourceItem">
    <Button Id="Btn_{1}" Width="35" Height="35">
      <Control Id="NormalState">
        <Image Width="30" Height="30" Source="Race/Resources/{0}.png"/>
      </Control>
    </Button>
  </Template>

  <Template Name="template:ResourceCountItem">
    <Button Width="36" Height="50">
      <Control Id="NormalState">
        <Image Width="30" Height="30" Source="Race/Resources/{0}.png"/>
        <Label Left="0" Top="30" Width="40" Text="{1}" FontSize="15" FontIndent="-7" FontColor="White"/>
      </Control>
    </Button>
  </Template>

  <Template Name="template:ToolConfigItem">
    <Button Width="170" Height="30">
      <Control Id="NormalState">
        <Image Width="30" Height="30" Left="0" Source="Race/Resources/{0}.png"/>

        <Label Id="Count_{0}" Left="33" Top="5" Width="40" Text="0" FontSize="15" FontIndent="-7" FontColor="White"/>

        <Button Id="Up_{0}" Left="60" Top="3" Width="15" Height="25" ImageTemplate="Buttons/ValueUp"/>
        <Button Id="Down_{0}" Left="75" Top="3" Width="15" Height="25" ImageTemplate="Buttons/ValueDown"/>

        <Control Left="90" Top="5" Id="Overlay_{0}" Width ="90" Height="20">
          <Image Width="0" Height="20" Left="4" Source="Images/Ctrls/CtrlProgressOverlay.png" Opacity="0.7"/>
          <Image Left="0" Source="Images/Ctrls/CtrlProgress.png"/>
        </Control>
      </Control>
    </Button>
  </Template>

  <Template Name="template:MigrantProfessionItem">
    <Button Width="90" Height="80">
      <Control Id="NormalState">
        <Image Left="10" Source="Race/{Race}/MigrantStat/{0}.png"/>
        <Button Id="PageUp_{0}" Left="50" Width="20" Height="30" ImageTemplate="Buttons/ValuePageUp"/>
        <Button Id="Up_{0}" Left="70" Width="20" Height="30" ImageTemplate="Buttons/ValueUp"/>
        <Button Id="PageDown_{0}" Top="30" Width="20" Height="30" Left="50" ImageTemplate="Buttons/ValuePageDown"/>
        <Button Id="Down_{0}" Top="30" Width="20" Height="30" Left="70" ImageTemplate="Buttons/ValueDown"/>
      </Control>
    </Button>
  </Template>

  <Template Name="template:MigrantStatItem">
    <Button Width="45" Height="90">
      <Control Id="NormalState">
        <Image Left="15" Source="Race/{Race}/MigrantStat/{0}.png"/>
        <Label Id="Text_{0}" Left="20" Top="60" Width="40" Text="0" FontIndent="-7" FontColor="White"/>
      </Control>
    </Button>
  </Template>
  
  <Template Name="template:StockDistItem">
    <Button Width="180" Height="70">
      <Control Id="NormalState">
        <Image Width="50" KeepAspectRatio="true" Source="Race/{Race}/Buildings/{0}.png"/>

        <Button Id="Btn_{1}_{0}" IsToggleable="true" Left="60" Width="30" Height="30">
          <Control Id="NormalState">
            <Image Left="0" Source="Race/Resources/{1}.png"/>
            <Image Left="10" Top="35" Height="8" Width="8" Source="Images/Ctrls/GreenCircle.png"/>
          </Control>
          <Control Id="DownState">
            <Image Left="0" Source="Race/Resources/{1}.png"/>
            <Image Left="10" Top="35" Height="8" Width="8" Source="Images/Ctrls/RedCircle.png"/>
          </Control>
        </Button>

        <Button Id="Btn_{2}_{0}" IsToggleable="true" Left="100" Width="30" Height="30">
          <Control Id="NormalState">
            <Image Left="0" Source="Race/Resources/{2}.png"/>
            <Image Left="10" Top="35" Height="8" Width="8" Source="Images/Ctrls/GreenCircle.png"/>
          </Control>
          <Control Id="DownState">
            <Image Left="0" Source="Race/Resources/{2}.png"/>
            <Image Left="10" Top="35" Height="8" Width="8" Source="Images/Ctrls/RedCircle.png"/>
          </Control>
        </Button>

        <Button Id="Btn_{3}_{0}" IsToggleable="true" Left="140" Width="30" Height="30">
          <Control Id="NormalState">
            <Image Left="0" Source="Race/Resources/{3}.png"/>
            <Image Left="10" Top="35" Height="8" Width="8" Source="Images/Ctrls/GreenCircle.png"/>
          </Control>
          <Control Id="DownState">
            <Image Left="0" Source="Race/Resources/{3}.png"/>
            <Image Left="10" Top="35" Height="8" Width="8" Source="Images/Ctrls/RedCircle.png"/>
          </Control>
        </Button>
      </Control>
    </Button>
  </Template>
    
</GUITemplates>