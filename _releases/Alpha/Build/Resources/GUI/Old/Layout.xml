<GUILayout TemplatesPath="Templates.xml">
  <RootElement Height="1024" DataContext="GameLeftPanel">
    <Image Height="1024" Source="img:GameLeftPanel" Opacity="0.9">
      <Control Left="20" Top="20" DataContext="Buildings">
        
        <Control Top="18">
          <Button Template="template:RoundedButton" Left="0" Width="65" Height="65"/>
          <Button Template="template:RoundedButton" Left="72" Width="65" Height="65"/>
          <Button Template="template:RoundedButton" Left="144" Width="65" Height="65"/>
          <Button Template="template:RoundedButton" Left="216" Width="65" Height="65"/>
        </Control>
        
        <Frame DataContext="Economy" Top="80" Width="280" Height="600" Config="frame:EdgedButton" Opacity="0.5">
          <ListBox ItemsSource="{Binding Entries}">
            <ItemTemplate>
                <Button Trigger="Settings" Template="template:ImageListItem" Left="10" Top="10" Width="120" Height="120">
                  <Image Left="10" Top="10" Width="100" Height="100" Source="{Binding Image}" ToolTip="{Binding ToolTip}"/>
                </Button>
            </ItemTemplate>
          </ListBox>
        </Frame>
      </Control>
    </Image>
  </RootElement>
</GUILayout>